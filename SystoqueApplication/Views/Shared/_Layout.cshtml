<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Systoque</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Systoque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Movimentos
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">Vendedores</li>
                            <li>@Html.ActionLink("Cadastrar Vendedor", "Create", "Vendedor")</li>
                            <li>@Html.ActionLink("Listar Vendedores", "Index", "Vendedor")</li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Produtos</li>
                            <li>@Html.ActionLink("Cadastrar Produto Perecível", "Create", "ProdutoPerecivel")</li>
                            <li>@Html.ActionLink("Pesquisar Produto Perecível", "Index", "ProdutoPerecivel")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Cadastrar Produto Não Perecível", "Create", "ProdutoNaoPerecivel")</li>
                            <li>@Html.ActionLink("Pesquisar Produto Não Perecível", "Index", "ProdutoNaoPerecivel")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Lançamento", "Create", "Venda")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Relatórios<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Extrato Comissão", "Create", "Vendedor")</li>
                            <li>@Html.ActionLink("Produtos em Falta", "Index", "Home")</li>
                            <li>@Html.ActionLink("Estoque Atual", "Create", "Vendedor")</li>
                            <li>@Html.ActionLink("Faturamento por período", "Index", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sign Up", "Index", "Home")</li>
                    <li>@Html.ActionLink("Login", "Index", "Home")</li>
                </ul>
            </div>
        </div>
        
            <input type="hidden" id="success" value="@TempData["success"]" />
            <input type="hidden" id="info" value="@TempData["info"]" />
            <input type="hidden" id="warning" value="@TempData["warning"]" />
            <input type="hidden" id="error" value="@TempData["error"]" />
         
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Systoque</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    
    @RenderSection("scripts", required: false)
</body>
</html>
