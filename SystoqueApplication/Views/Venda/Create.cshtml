@model SystoqueApplication.Models.Venda

@{
    ViewBag.Title = "Registro de Vendas";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Venda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.dataVenda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataVenda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataVenda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dataPrevEntrega, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataPrevEntrega, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataPrevEntrega, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.totalVenda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.totalVenda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.totalVenda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.statusVenda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.statusVenda, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.statusVenda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.vendedor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vendedor.Matricula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vendedor.Matricula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar Pedido" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Index", "ProdutoPerecivel", FormMethod.Get))
{
    <h4>Incluir no Pedido</h4>

    <div class="form-inline">
        <div class="form-group">
            <label for="codigoBarras">Código</label>
            <input class="form-control" type="text" />
        </div>

        <div class="form-group">
            <label for="nomeProduto">Nome Produto</label>
            <input class="form-control" type="text" />
        </div>

        <div class="form-group">
            <label for="qtdeProduto">Quantidade</label>
            <input class="form-control" type="number" min="1" />
        </div>
    </div>
    <br />
    <div class="form-inline">
        <div class="form-group">
            <label for="valorVenda">Valor do Produto</label>
            <input class="form-control" type="text" />
        </div>

        <button type="submit" class="btn btn-default">Incluir Produto</button>
    </div>

    <br />
    <div class="table-responsive">
        <h4>Itens do Pedido</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Código Produto</th>
                    <th>Nome Produto</th>
                    <th>Valor Unitário</th>
                    <th>Quantidade</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
        </table>
    </div>
}

<br />


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
